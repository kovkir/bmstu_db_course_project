.PHONY : build move

see : build move

build : rpz.tex
	pdflatex -shell-escape rpz.tex
	biber rpz
	biber rpz
	pdflatex -shell-escape rpz.tex
	pdflatex -shell-escape rpz.tex

move : rpz.pdf
	-mkdir ../pdf
	mv rpz.pdf ../pdf/ 
	-mkdir ../out        
	-mv *.aux *.log *.bbl *.blg *.dvi *.out *.toc *.bcf *.xml ../out/
